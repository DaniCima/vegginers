<h2>Profile</h2>

{{#if username}}
  <h1> Welcome to Veginners {{username}}! </h1>
{{/if}}

<form id="logout-form" action="/auth/logout" method="POST">
  <button>Logout</button>
</form>

<button><a href="/posts/create">Create a Post</a></button>





