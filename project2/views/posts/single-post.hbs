{{!-- {{foundPost.title}} --}}
<div class="signupform edit-delete-form col-sm-12 col-md-6 ">
  <div class="col-md-12">
    <label><strong>Title:</strong></label>
    <input type="text" name="title" value="{{foundPost.title}}"/>
  </div>
  <div>
    <label for=""><strong>Image:</strong> </label>
    <input  type="file" class="col-12">
  </div>
  <div class="col-md-12 divDescriptionEditPost">
    <label for=""><strong>Description & Recipe:</strong></label>
    <input type="text" name="history" class="post-create-description" value="{{foundPost.history}}"/>
  </div>
{{#if checkCurrentUser}}
    <a href="/posts/edit/{{foundPost._id}}" class="col-sm-6 btn btn-primary btn-lg btnEditPage">Edit</a>
    <a href="/posts/delete/{{foundPost._id}}" class="col-sm-6 btn btn-primary btn-lg btnDeletePage">Delete</a>
{{/if}}  
</div>

